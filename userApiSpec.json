{
    "openapi":"3.1.0",
    "info":
    {
        "title":"user api",
        "description":"api untuk user menegament wisata"
    },
    "servers":
    [
        {
            "url":"wisata.pdg.id/user"
        }
    ],

    "components":
    {
        "securitySchemes":
        {
            "jwtAuth":
            {
                "type":"http",
                "scheme":"bearer",
                "bearerFormat":"JWT"
            }
        },
        "requestBody":
        {
            "user":
            {
                "type":"object",
                "properties":
                {
                    "id":
                    {
                        "type":"integer",
                        "example":"1"
                    },
                    "name":
                    {
                        "type":"string",
                        "example":"yadi"
                    },
                    "email":
                    {
                        "type":"string",
                        "example":"yadi@gmail.com"
                    },
                    "password":
                    {
                        "type":"string",
                        "example":"124435"
                    }
                }
            }
        },
        "responses":
        {
            "failed":
            {
                "type":"object",
                "properties":
                {
                    "failed":
                    {
                        "example":"400"
                    }
                }
            }
        }
    },
    "security":
    [
        {
            "jwtAuth":[]
        }
    ],

    "paths":
    {
        "/user":
        {
            "post":
            {
                "parameters":
                [
                    {
                        "name":"Authorization",
                        "in":"header"
                    }
                ],
                "requestBody":
                {
                    "required":true,
                    "description":"untuk mengirim data user",
                    "content":
                    {
                        "application/json":
                        {
                            "schema":
                            {
                                "$ref":"#/components/requestBody/user"
                            }
                        }
                    }
                },
                "responses":
                {
                    "200":
                    {
                        "description":"success",
                        "content":
                        {
                            "application/json": 
                            {
                                "schema": 
                                {
                                    "$ref":"#/components/requestBody/user"
                                }
                            }
                        }
                    },
                    "400":
                    {
                        "description":"failed",
                        "content":
                        {
                            "application/json":
                            {
                                "schema": 
                                {
                                    "$ref":"#/components/responses/failed"
                                }
                            }
                        }
                    }
                }

            },
            "get":
            {
                "parameters":
                [
                    {
                        "name":"Authorization",
                        "in":"header"
                    }
                ],
                
                "responses":
                {
                    "200":
                    {
                        "description":"success",
                        "content":
                        {
                            "application/json": 
                            {
                                "schema": 
                                {
                                    "$ref":"#/components/requestBody/user"
                                }
                            }
                        }
                    },
                    "400":
                    {
                        "description":"failed",
                        "content":
                        {
                            "application/json":
                            {
                                "schema": 
                                {
                                    "$ref":"#/components/responses/failed"
                                }
                            }
                        }
                    }
                }

            }
        },
        "/user/{user_id}":
        {
            "patch":
            {
                "parameters":
                [
                    {
                        "name":"Authorization",
                        "in":"header"
                    },
                    {
                        "name":"id",
                        "in":"path"
                    }
                ],
                "requestBody":
                {
                    "required":true,
                    "description":"untuk mengirim data user",
                    "content":
                    {
                        "application/json":
                        {
                            "schema":
                            {
                                "$ref":"#/components/requestBody/user"
                            }
                        }
                    }
                },
                "responses":
                {
                    "200":
                    {
                        "description":"success",
                        "content":
                        {
                            "application/json": 
                            {
                                "schema": 
                                {
                                    "$ref":"#/components/requestBody/user"
                                }
                            }
                        }
                    },
                    "400":
                    {
                        "description":"failed",
                        "content":
                        {
                            "application/json":
                            {
                                "schema": 
                                {
                                    "$ref":"#/components/responses/failed"
                                }
                            }
                        }
                    }
                }

            },
            "delete":
            {
                "parameters":
                [
                    {
                        "name":"Authorization",
                        "in":"header"
                    }
                ],
                
                "responses":
                {
                    "200":
                    {
                        "description":"success"
                        
                    },
                    "400":
                    {
                        "description":"failed",
                        "content":
                        {
                            "application/json":
                            {
                                "schema": 
                                {
                                    "$ref":"#/components/responses/failed"
                                }
                            }
                        }
                    }
                }

            }
        }
    }
}